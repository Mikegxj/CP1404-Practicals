BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: ''
            font_size: 48
            multiline: False
            size_hint_x: 0.4
            height: '65dp'
        Button:
            text: 'Square'
            size_hint_x: 0.4
            height: '65dp'
            font_size: 36
            on_press: app.handle_calculate(input_number.text)
        Label:
            id: output_label
            text: ''
            font_size: 48
            color: (1, 0.75, 0.8, 1)
            size_hint_x: 0.5
            height: '48dp'
    Label:
        text: 'Enter a number and press "Square"'
        height: '36dp'
        color: (1, 1, 1, 1)